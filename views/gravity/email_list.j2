{% extends "gravity/main_template.j2" %}
{% block content %}

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <img src="/img/logo/gravity_logo_transparent.png" alt="" height="150" width="150" style="padding: 5px 5px 5px 5px;"/>
          <h1 class="text-uppercase text-white font-weight-bold">Join Email List</h1>
        </div>
      </div>
    </div>
  </header>

  <!-- About Section -->
  <section class="page-section" id="contact">
    <div class="container">

      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">

          <div class="row justify-content-center">
            <div class="col-lg-8 text-center" id="contact_info_form">
                <h4>Enter your Contact Information</h4>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="text" class="form-control form-control-user" id="first_name" placeholder="First Name">
                    </div>
                    <div class="col-sm-6">
                    <input type="text" class="form-control form-control-user" id="last_name" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control form-control-user" id="email" placeholder="Email Address">
                </div>
                <div class="form-group">
                    <input type="phone" class="form-control form-control-user" id="phone" placeholder="Phone Number">
                </div>
                <button type="submit" class="btn btn-outline-primary" onClick="submitContactAdd()" id="submit_new_contact_button">Submit</button>

            </div>
          </div>

        </div>
      </div>

  </section>

{% endblock %}