{% extends "gravity/main_template.j2" %}
{% block content %}

<!-- Custom styles for this template -->
  <link href="css/clean-blog.css" rel="stylesheet">

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-white font-weight-bold">{{ blog_post.title }}</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5">{{ blog_post.subtitle }}</p>
          <p class="text-white-75 font-weight-light mb-5">{{ blog_post.datetime_created }}</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Section -->
  <section class="page-section" id="contact">
    <div class="container">

      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <p>{{ blog_post.text }}</p>
        </div>
      </div>

  </section>

  </section>

{% endblock %}