{% extends "gravity/main_template.j2" %}
{% block content %}

<!-- Custom styles for this template -->
  <link href="css/clean-blog.css" rel="stylesheet">

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-white font-weight-bold">{{ event.title }}</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5">Register for the event here.</p>
        </div>
      </div>
    </div>
  </header>

  <!-- New Event Section -->
  <section class="page-section" id="contact">
    <div class="container">

      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2>{{ event.title }}</h2>
            <h3>Register for this event</h3>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user" id="first_name" placeholder="First Name">
                </div>
                <div class="col-sm-6">
                <input type="text" class="form-control form-control-user" id="last_name" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group">
                <input type="email" class="form-control form-control-user" id="email" placeholder="Email Address">
            </div>

            <button type="submit" class="btn btn-outline-primary" onClick="submitEventRegistration()" id="submit_new_event_button">Register</button>
            <input id="event_id" value="{{ event.id }}" hidden>
            <input id="event_label" value="{{ event.label }}" hidden>
        </div>
      </div>

  </section>

{% endblock %}