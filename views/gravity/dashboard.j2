{% extends "gravity/main_template.j2" %}
{% block content %}

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <img src="/img/logo/gravity_logo_transparent.png" alt="" height="150" width="150" style="padding: 5px 5px 5px 5px;"/>
          <h1 class="text-uppercase text-white font-weight-bold">This is the dashboard page!</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5">Any information that should be in the dashboard will show up here!</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Dashboard Section -->
  <section class="page-section" id="contact">
    <div class="container">

      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h2 class="mt-0">Gravity Dashboard Body</h2>
          <hr class="divider my-4">
          <p>This is the body of the dashboard</p>
        </div>
      </div>

  </section>

{% endblock %}