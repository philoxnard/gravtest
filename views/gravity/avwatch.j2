{% extends "gravity/main_template.j2" %}
{% block content %}

    <!-- Masthead -->
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">AVWATCH</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">
                    Test to see if Avwatch view is rendering.
                    </p>
                    <p class="text-white-75 font-weight-light mb-5">Hello World
                    </p>
                </div>
            </div>
        </div>
    </header>


    <!-- File Reading Section -->
    <section class="page-section" id="contact">
        <div class="container">
            <p class="text-muted mb-5">{{ test }} </p>
            {% for line in test %}
                <p>{{ line }}</p>
            {% endfor %}

        <button onclick="testphil()">Re-read file contents</button>

        <div id="filecontent"></div>
    </section?

{% endblock %}