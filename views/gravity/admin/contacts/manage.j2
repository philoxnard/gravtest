{% extends "gravity/admin/admin_template.j2" %}
{% block content %}

    {% include 'gravity/admin/contacts/modals.j2' %}

      <!-- Begin Page Content -->
      <div class="container-fluid">

          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Manage contacts</h1>
            <button type="button" id="addNewContactButton" class="btn btn-sm btn-primary shadow-sm">Add New Contact</button>
          </div>

          <!-- DataTables contacts -->
          <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ contact_list.name }}</h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="contactTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                      <th scope="col">Date/Time Created</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone</th>
                      <th scope="col">Edit Contact</th>
                      <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    <tbody id="contacts_tbody">
                      {% for contact in contact_list.list %}
                          <tr>
                            <td>{{ contact.datetime_created }}</td>
                            <td>{{ contact.first_name }}</td>
                            <td>{{ contact.last_name }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.phone }}</td>
                            <td><button type="button" data-email="{{ contact.email }}" data-first_name="{{ contact.first_name }}" data-last_name="{{ contact.last_name }}" data-phone="{{ contact.phone }}" class="btn btn-default contact_edit_button"><i class="fa fa-wrench text-primary"></i></button></a></td>
                            <td><button type="button" data-email="{{ contact.email }}" class="btn btn-default contact_delete_button"><i class="fa fa-trash text-primary"></i></button></td>
                          </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

      </div>
      <!-- /.container-fluid -->

      <script src="/js/admin/contacts/manage.js"></script>

{% endblock %}
