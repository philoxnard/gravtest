
{% extends "gravity/main_template.j2" %}
{% block content %}

    <!-- Elements CSS -->
    <link href="/css/stripe-elements.css" rel="stylesheet">

    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/stripe/checkout.js"></script>

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
            <img src="/img/logo/gravity_logo_transparent.png" alt="" height="200" width="200" style="padding: 5px 5px 5px 5px;"/>
          <h1 class="text-uppercase text-white font-weight-bold">Checkout!</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5">Checkout Page!</p>
        </div>
      </div>
    </div>
  </header>

  <section class="page-section" id="contact">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-6">
                <h5>Stripe Checkout</h5>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col col-4">
                <button class="btn btn-outline-primary btn-block" onclick="startCheckout('sku_123')">Checkout Product 1</button>
            </div>
            <div class="col col-4">
                <button class="btn btn-outline-primary btn-block" onclick="startCheckout('sku_456')">Checkout Product 2</button>
            </div>
        </div>
    </div>

  </section>

{% endblock %}